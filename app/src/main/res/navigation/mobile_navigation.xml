<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.miguel.inmobile.ui.home.HomeFragment"
        android:label="@string/inicio"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.miguel.inmobile.ui.gallery.GalleryFragment"
        android:label="@string/perfil"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_nav_gallery_to_cambiarClaveFragment"
            app:destination="@id/cambiarClaveFragment" />
    </fragment>

    <fragment
        android:id="@+id/cambiarClaveFragment"
        android:name="com.miguel.inmobile.ui.cambiarclave.CambiarClaveFragment"
        android:label="@string/cambiar_clave"
        tools:layout="@layout/fragment_cambiar_clave">
        <action
            android:id="@+id/action_cambiarClaveFragment_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.miguel.inmobile.ui.inmuebles.InmueblesFragment"
        android:label="@string/inmuebles"
        tools:layout="@layout/fragment_inmuebles" >
        <action
            android:id="@+id/action_nav_inmuebles_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
        <action
            android:id="@+id/action_nav_inmuebles_to_cargarInmuebleFragment"
            app:destination="@id/cargarInmuebleFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.miguel.inmobile.ui.contratos.ContratosFragment"
        android:label="@string/contratos"
        tools:layout="@layout/fragment_contratos" />

    <fragment
        android:id="@+id/nav_detalleContrato"
        android:name="com.miguel.inmobile.ui.contratos.DetalleContratoFragment"
        android:label="Detalle Contrato"
        tools:layout="@layout/fragment_detalle_contrato">
        <action
            android:id="@+id/action_nav_detalleContrato_to_nav_pagos"
            app:destination="@id/nav_pagos" />
    </fragment>

    <fragment
        android:id="@+id/nav_pagos"
        android:name="com.miguel.inmobile.ui.pagos.PagosFragment"
        android:label="Pagos"
        tools:layout="@layout/fragment_pagos" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.miguel.inmobile.ui.slideshow.SlideshowFragment"
        android:label="@string/salir"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.miguel.inmobile.ui.inmuebles.DetalleInmuebleFragment"
        android:label="Detalle del inmueble"
        tools:layout="@layout/fragment_detalle_inmueble" >
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>
    <fragment
        android:id="@+id/cargarInmuebleFragment"
        android:name="com.miguel.inmobile.ui.inmuebles.CargarInmuebleFragment"
        android:label="Cargar un inmueble">
        <action
            android:id="@+id/action_cargarInmuebleFragment_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>

    <fragment
        android:id="@+id/nav_inquilino"
        android:name="com.miguel.inmobile.ui.inquilinos.InquilinosFragment"
        android:label="Inquilino"
        tools:layout="@layout/fragment_inquilinos" />
</navigation>